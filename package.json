{
  "name": "turborepo-test",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "clean": "turbo daemon stop && rm -rf .turbo/cache .turbo/runs node_modules/.cache/turbo apps/*/.turbo apps/*/.next",
    "rebuild": "pnpm clean && pnpm build",
    "lint": "turbo run //#biome-lint",
    "format": "turbo run //#biome-format",
    "check": "turbo run //#biome-check",
    "biome-lint": "biome lint .",
    "biome-format": "biome format --write .",
    "biome-check": "biome check --write .",
    "check:strict": "biome check --write --no-ignore .",
    "check:no-disable": "node scripts/check-no-disable.mjs",
    "validate": "pnpm check:no-disable && pnpm check:strict",
    "prepare": "husky",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@repo/biome-config": "workspace:*",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "turbo": "^2.6.3",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.14.2"
}

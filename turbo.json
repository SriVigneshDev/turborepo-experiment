{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "//#biome-lint": {
      "inputs": [
        "apps/**/*.ts",
        "apps/**/*.tsx",
        "apps/**/*.js",
        "apps/**/*.jsx",
        "packages/**/*.ts",
        "packages/**/*.tsx",
        "biome.json",
        "packages/biome-config/biome.json"
      ],
      "outputs": []
    },
    "//#biome-format": {
      "cache": false,
      "outputs": []
    },
    "//#biome-check": {
      "cache": false,
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}

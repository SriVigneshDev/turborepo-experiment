{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "//#biome-lint": {
      "inputs": [
        "apps/**/*.{ts,tsx,js,jsx}",
        "packages/**/*.{ts,tsx,js,jsx}",
        "biome.json",
        "packages/biome-config/biome.json"
      ],
      "outputs": []
    },
    "//#biome-format": {
      "cache": false,
      "outputs": []
    },
    "//#biome-check": {
      "cache": false,
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!Dockerfile*",
        "!*.dockerfile",
        "!.dockerignore",
        "!.next/**"
      ],
      "outputs": [".next/**", "!.next/cache/**", "!.next/standalone/**"],
      "outputLogs": "new-only"
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
